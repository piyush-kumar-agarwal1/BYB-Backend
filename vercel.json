{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/auth/login",
      "methods": ["OPTIONS", "POST"],
      "dest": "/api/auth/login.js"
    },
    {
      "src": "/api/auth/register",
      "methods": ["OPTIONS", "POST"],
      "dest": "/api/auth/register.js"
    },
    {
      "src": "/api/auth/(.*)",
      "dest": "/api/auth/[...slug].js"
    },
    {
      "src": "/api/user/(.*)",
      "dest": "/api/user/[...slug].js"
    },
    {
      "src": "/health",
      "dest": "/api/health.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "https://break-your-boredom.vercel.app" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, DELETE, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization, X-Requested-With, Accept, Origin" },
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Max-Age", "value": "86400" }
      ]
    }
  ]
}